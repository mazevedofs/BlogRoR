<p id="notice"><%= notice %></p>

<h1>Posts</h1>

    <% @posts.each do |post| %>
      <p>
        <%= link_to post.titulo, post %>
        <%= post.conteudo %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
